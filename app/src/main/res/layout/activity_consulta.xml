<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <TextView
        android:id="@+id/consulta"
        android:layout_width="140dp"
        android:layout_height="30dp"

        android:layout_marginTop="20dp"
        android:text="CONSULTAR"
        android:textAlignment="center"
        tools:text="CONSULTAR"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:background="@drawable/iconomf" />

    <ImageButton
        android:id="@+id/volver"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:background="@drawable/volver" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="nuevo"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/numero_orden"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@color/white"
        android:hint="ingrese numero de orden"
        android:inputType="text"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/secondary_text"
        android:visibility="visible"
        android:layout_below="@+id/consulta"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout" />

    <ImageButton
        android:id="@+id/boton_buscar"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/numero_orden"
        android:layout_toRightOf="@+id/numero_orden"
        android:background="@drawable/ic_search_white_48dp"
         />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="150dp"
        android:layout_height="240dp"
        android:layout_alignLeft="@+id/volver"
        android:layout_alignStart="@+id/volver"
        android:layout_below="@+id/recepcionista"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:weightSum="1">


        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nombre Movil :"
            android:layout_weight="0.39" />

        <TextView
            android:id="@+id/nombre_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cliente:" />

        <TextView
            android:id="@+id/numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numero : " />

        <TextView
            android:id="@+id/estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="estado: " />


        <TextView
            android:id="@+id/direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direccion de entrega:" />



        <TextView
            android:id="@+id/observacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="observacion:"
            android:layout_weight="0.17" />
        <TextView
            android:id="@+id/descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="descripcion:"
            android:layout_weight="0.17" />






        <TextView
            android:id="@+id/fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fecha y hora de entrega:" />

        <TextView
            android:id="@+id/manifiesto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="manifiesto:" />

        <TextView
            android:id="@+id/ciudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ciudad:" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="150dp"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:weightSum="1"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignRight="@+id/boton_buscar"
        android:layout_alignEnd="@+id/boton_buscar">


        <TextView
            android:id="@+id/nombre2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dato1" />

        <TextView
            android:id="@+id/nombre_cliente2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dato2" />

        <TextView
            android:id="@+id/numero2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dato3" />

        <TextView
            android:id="@+id/estado2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dato4" />




        <TextView
            android:id="@+id/direccion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dato5"
            android:layout_weight="0.18" />
        <TextView
            android:id="@+id/observacion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dato6"
            android:layout_weight="0.12" />
        <TextView
            android:id="@+id/descripcion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dato7"
             />
        <TextView
            android:id="@+id/fecha2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dato8"
            android:layout_weight="0.16" />
        <TextView
            android:id="@+id/manifiesto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dato9" />
        <TextView
            android:id="@+id/ciudad2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dato10" />


    </LinearLayout>

    <TextView
        android:id="@+id/recepcionista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/numero_orden"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="Recepcionista:" />

</RelativeLayout>