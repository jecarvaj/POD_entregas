<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <TextView
        android:id="@+id/consulta"
        android:layout_width="140dp"
        android:layout_height="30dp"

        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="CONSULTAR"
        android:textAlignment="center"
        tools:text="CONSULTAR" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:background="@drawable/iconomf" />

    <ImageButton
        android:id="@+id/volver"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:background="@drawable/volver" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="nuevo"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/numero_orden"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_below="@+id/consulta"
        android:layout_marginTop="31dp"
        android:background="@color/white"
        android:hint="ingrese numero de orden"
        android:inputType="text"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/numero_orden"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/numero_orden"
        android:layout_toRightOf="@+id/numero_orden"
        app:srcCompat="@drawable/consulta" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_above="@+id/volver"
        android:layout_alignLeft="@+id/volver"
        android:layout_alignStart="@+id/volver"
        android:layout_gravity="center"
        android:layout_marginBottom="23dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <TextView
            android:id="@+id/detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalle de la orden" />

        <TextView
            android:id="@+id/nombre_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cliente:" />

        <TextView
            android:id="@+id/eatado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado:" />

        <TextView
            android:id="@+id/logistico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logistico:" />

        <TextView
            android:id="@+id/recepcionista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recepcionista:" />

        <TextView
            android:id="@+id/cargo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargo:" />

        <TextView
            android:id="@+id/direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DireccÃ­on" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/degradado2" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <TextView
            android:id="@+id/detalle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dato1" />

        <TextView
            android:id="@+id/nombre_cliente2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dato2" />

        <TextView
            android:id="@+id/estado2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dato3" />

        <TextView
            android:id="@+id/logistico2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dato4" />

        <TextView
            android:id="@+id/recepcionista2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dato5" />

        <TextView
            android:id="@+id/cargo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dato6" />

        <TextView
            android:id="@+id/direccion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dato7" />


    </LinearLayout>

</RelativeLayout>