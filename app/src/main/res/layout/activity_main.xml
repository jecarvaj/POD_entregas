<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#E6E6E6"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff">

    </android.support.v7.widget.Toolbar>


    <ImageButton
        android:id="@+id/entrega"
        android:layout_width="90dp"
        android:layout_height="90dp"


        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/entrega" />

    <ImageButton
        android:id="@+id/retiro"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/entrega"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/moto" />

    <ImageButton
        android:id="@+id/estadisticas"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/textnuevo"
        android:layout_alignStart="@+id/textnuevo"
        android:layout_below="@+id/textnuevo"
        android:background="@drawable/estadistica" />

    <ImageButton
        android:id="@+id/consulta"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/textentrega"
        android:layout_alignStart="@+id/textentrega"
        android:layout_below="@+id/textentrega"
        android:background="@drawable/consulta" />

    <ImageButton
        android:id="@+id/lector2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/textconsulta"
        android:layout_alignStart="@+id/textconsulta"
        android:layout_below="@+id/textconsulta"
        android:background="@drawable/lectorqr" />

    <ImageButton
        android:id="@+id/nuevo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/textretiro"
        android:layout_alignStart="@+id/textretiro"
        android:layout_below="@+id/textretiro"
        android:background="@drawable/nuevo" />




    <!-- saco boton por mientras-->



    <TextView
        android:id="@+id/textentrega"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/entrega"
        android:layout_alignStart="@+id/entrega"
        android:layout_below="@+id/entrega"
        android:text="Entrega"
        android:textStyle="bold"
        android:textAlignment="center"
        android:visibility="visible"
        tools:text="Entrega" />

    <TextView
        android:id="@+id/lector"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/lector2"
        android:layout_alignRight="@+id/lector2"
        android:layout_below="@+id/lector2"
        android:text="Lector  Ordenes"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textnuevo"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Nuevo"
        android:textAlignment="center"
        android:visibility="visible"
        tools:text="Nuevo"
        android:textStyle="bold"
        android:layout_below="@+id/nuevo"
        android:layout_alignLeft="@+id/nuevo"
        android:layout_alignStart="@+id/nuevo" />

    <TextView
        android:id="@+id/textretiro"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:text="Retiro"
        android:visibility="visible"
        android:textStyle="bold"
        tools:text="Retiro"
        android:layout_below="@+id/retiro"
        android:layout_alignLeft="@+id/retiro"
        android:layout_alignStart="@+id/retiro" />

    <TextView
        android:id="@+id/textestadistica"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Estadisticas"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="visible"
        tools:text="Estadisticas"
        android:layout_below="@+id/estadisticas"
        android:layout_alignLeft="@+id/estadisticas"
        android:layout_alignStart="@+id/estadisticas" />

    <TextView
        android:id="@+id/textconsulta"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/consulta"
        android:layout_alignStart="@+id/consulta"
        android:layout_below="@+id/consulta"
        android:text="Consulta"
        android:textStyle="bold"
        tools:text="Consulta" />


</RelativeLayout>